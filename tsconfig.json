{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "types": ["node", "jest", "express"]
    },
    "include": ["src/**/*", "__tests__/**/*.ts"],
    "exclude": ["node_modules", "jest.config.js"]
  }
  